<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:buttonTint="@color/colorAccent"
        tools:ignore="RtlHardcoded"
        app:layout_constraintBottom_toBottomOf="@+id/nombreAgregarTV"
        android:layout_marginBottom="1dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/nombreAgregarTV"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.466" />

    <TextView
        android:id="@+id/nombreAgregarTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="Alejandro del Puerto Extremera"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/nickAgregarTV"
        app:layout_constraintTop_toTopOf="@+id/nickAgregarTV"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/nickAgregarTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nick"
        android:textSize="18sp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="72dp"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="72dp" />

    <ImageView
        android:id="@+id/fotoAgregar"
        android:layout_width="42dp"
        android:layout_height="41dp"
        android:layout_marginEnd="14dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="14dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/nickAgregarTV"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/nickAgregarTV"
        app:layout_constraintTop_toBottomOf="@+id/nickAgregarTV"
        app:srcCompat="@drawable/ic_account_circle"
        tools:ignore="ContentDescription"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />
</android.support.constraint.ConstraintLayout>