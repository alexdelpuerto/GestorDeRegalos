<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageButton
        android:id="@+id/compradoButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:tint="@android:color/black"
        android:visibility="visible"
        app:layout_constraintRight_toRightOf="@+id/fotoRegalo"
        app:layout_constraintTop_toBottomOf="@+id/fotoRegalo"
        app:srcCompat="@drawable/ic_action_cart"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <ImageView
        android:id="@+id/compradoImagen"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:paddingTop="2dp"
        android:tint="@android:color/black"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@+id/precioTV"
        app:layout_constraintRight_toRightOf="@+id/fotoRegalo"
        app:layout_constraintTop_toBottomOf="@+id/fotoRegalo"
        app:srcCompat="@drawable/ic_remove_shopping_cart"
        tools:ignore="ContentDescription,RtlHardcoded"
        tools:layout_editor_absoluteX="183dp" />

    <TextView
        android:id="@+id/precioTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19.95â‚¬"
        android:layout_marginEnd="111dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/fotoRegalo"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/fotoRegalo" />

    <ImageView
        android:id="@+id/fotoRegalo"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:adjustViewBounds="false"
        app:srcCompat="@drawable/ic_menu_gallery"
        tools:ignore="ContentDescription,MissingConstraints"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/nombreRegaloTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Funko Pop Tyrion Lannister"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/fotoRegalo"
        app:layout_constraintLeft_toLeftOf="@+id/fotoRegalo"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/fotoRegalo"
        app:layout_constraintHorizontal_bias="0.482" />

</android.support.constraint.ConstraintLayout>