<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="regalos.example.com.gestorderegalos.Regalos.NuevoRegalo">

    <ImageButton
        android:id="@+id/galeriaRegButton"
        android:layout_width="42dp"
        android:layout_height="41dp"
        app:srcCompat="@drawable/ic_menu_gallery"
        tools:ignore="ContentDescription"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="99dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="100dp"
        app:layout_constraintRight_toRightOf="@+id/descAgregarRegET"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/precAgregarRegET"
        android:layout_marginLeft="99dp"
        android:layout_marginRight="100dp" />

    <ImageButton
        android:id="@+id/camaraRegButton"
        android:layout_width="42dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/ic_menu_camera"
        android:layout_marginEnd="36dp"
        tools:ignore="ContentDescription"
        app:layout_constraintRight_toLeftOf="@+id/galeriaRegButton"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/galeriaRegButton"
        app:layout_constraintTop_toTopOf="@+id/galeriaRegButton"
        android:layout_marginRight="36dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.967"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/nombreAgregarRegTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:text="@string/nombre_2pts"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/fotoAgregarReg"
        app:layout_constraintLeft_toLeftOf="@+id/descAgregarRegET"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/nombreAgregarRegET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="16sp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/fotoAgregarReg"
        android:layout_marginEnd="22dp"
        app:layout_constraintRight_toRightOf="@+id/fotoAgregarReg"
        android:layout_marginRight="22dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/precAgregarRegET"
        tools:ignore="RtlHardcoded"
        android:layout_marginStart="8dp" />

    <ImageView
        android:id="@+id/fotoAgregarReg"
        android:layout_width="0dp"
        android:layout_height="270dp"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="57dp"
        android:layout_marginLeft="57dp"
        android:layout_marginRight="57dp"
        android:layout_marginStart="57dp"
        app:layout_constraintBottom_toTopOf="@+id/precAgregarRegTV"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_menu_gallery"
        tools:ignore="ContentDescription"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/precAgregarRegTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/precio"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/descAgregarRegET"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="172dp" />

    <EditText
        android:id="@+id/precAgregarRegET"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="1dp"
        android:ems="10"
        android:hint="@string/euro"
        android:inputType="numberDecimal"
        android:textAlignment="textEnd"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/fotoAgregarReg"
        app:layout_constraintTop_toBottomOf="@+id/fotoAgregarReg"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/descAgregarRegET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="33dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="@string/esta_es_la_descripci_n_del_regalo_puede_haber_saltos_de_l_nea"
        android:inputType="textMultiLine"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/precAgregarRegTV"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

</android.support.constraint.ConstraintLayout>
